    <ImageView
        android:id="@+id/imageView_title"
        android:layout_width="fill_parent"
        android:layout_height="90dip" >
    </ImageView>

    <com.junze.megaeyefamily.view.AutoScrollTextView
        android:id="@+id/textview_name"
        android:layout_width="fill_parent"
